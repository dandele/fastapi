# BeeBus Fatture Extractor - Environment Configuration
# Copia questo file in .env e personalizza i valori per il tuo ambiente

# ===== ENVIRONMENT =====
ENVIRONMENT=development
# Opzioni: development, production
DEBUG=false

# ===== SERVER =====
HOST=0.0.0.0
PORT=8000
WORKERS=1

# ===== CORS =====
# In produzione, specifica i domini autorizzati separati da virgola
# Esempio: CORS_ORIGINS=https://app.beebus.it,https://www.beebus.it
CORS_ORIGINS=*

# ===== FILE UPLOAD =====
MAX_FILE_SIZE=52428800
# 50MB = 50 * 1024 * 1024 = 52428800 bytes
MAX_BATCH_FILES=10

# ===== RATE LIMITING =====
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
# Numero massimo di richieste
RATE_LIMIT_PERIOD=60
# Periodo in secondi (60 = 1 minuto)

# ===== LOGGING =====
LOG_LEVEL=INFO
# Opzioni: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json
# Opzioni: json, text

# ===== MONITORING =====
# Sentry DSN per error tracking (opzionale)
SENTRY_DSN=

# ===== SECURITY =====
# API Key Authentication (opzionale)
API_KEY_ENABLED=false
API_KEYS=
# Esempio: API_KEYS=key1,key2,key3

# ===== PRODUCTION EXAMPLE =====
# ENVIRONMENT=production
# DEBUG=false
# CORS_ORIGINS=https://app.beebus.it,https://beebus.netlify.app
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_REQUESTS=50
# LOG_LEVEL=WARNING
# API_KEY_ENABLED=true
# API_KEYS=your-secret-key-here